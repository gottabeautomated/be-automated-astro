---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "Bereit für den nächsten Schritt?",
  description = "Kontaktiere uns für ein unverbindliches Beratungsgespräch und erfahre, wie wir dein Unternehmen durch Automatisierung zum nächsten Level bringen können.",
  buttonText = "Jetzt Termin vereinbaren",
  buttonLink = "/kontakt"
} = Astro.props;
---

<section class="bg-[#c2783c] dark:bg-[#b46c35] text-white py-16 transition-colors duration-300">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-4">{title}</h2>
    <p class="mb-8 max-w-2xl mx-auto text-amber-100">{description}</p>
    <a href={buttonLink} class="inline-block bg-white dark:bg-gray-100 text-[#c2783c] dark:text-[#b46c35] font-medium py-3 px-8 rounded-lg hover:bg-amber-50 dark:hover:bg-amber-100 transition-colors">
      {buttonText}
    </a>
  </div>
</section> 