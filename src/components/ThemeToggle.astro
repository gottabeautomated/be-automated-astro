<script is:inline>
  // Theme-Toggle Funktion global machen, damit sie direkt im onclick-Attribut verwendet werden kann
  function toggleDarkMode() {
    // Toggle dark class auf dem html Element
    const isDark = document.documentElement.classList.toggle('dark');
    
    // Speichere Einstellung in localStorage
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
    
    // Debug-Ausgabe
    console.log("Theme umgeschaltet zu: " + (isDark ? 'dark' : 'light'));
  }

  // Initiale Theme-Einstellung basierend auf localStorage oder System-Preference
  document.addEventListener('DOMContentLoaded', () => {
    // Wenn schon bei Seitenaufbau ein Theme im localStorage existiert, dieses verwenden
    const savedTheme = localStorage.getItem('theme');
    
    if (savedTheme === 'dark') {
      document.documentElement.classList.add('dark');
    } else if (savedTheme === 'light') {
      document.documentElement.classList.remove('dark');
    } else {
      // Falls noch nichts im localStorage ist, System-Preference verwenden
      if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      } else {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      }
    }
    
    // Tastatur-Support für den Toggle hinzufügen
    const themeToggle = document.getElementById('themeToggle');
    if (themeToggle) {
      themeToggle.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          toggleDarkMode();
        }
      });
    }
  });
</script> 