<style>
  /* Farbverlauf mit sanfter Bewegung */
  .color-gradient {
    display: inline-block;
    background-image: linear-gradient(90deg, #c2783c, #d38545, #c2783c);
    background-size: 300% auto;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    -webkit-text-fill-color: transparent;
    animation: 
      gradient-shift 5s ease-in-out infinite,
      gentle-float 6s ease-in-out infinite;
    position: relative;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }
  
  @keyframes gentle-float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-4px);
    }
  }

  /* Dark Mode Anpassungen */
  :global(.dark) .color-gradient {
    background-image: linear-gradient(90deg, #d38545, #e8b888, #d38545);
  }
</style> 