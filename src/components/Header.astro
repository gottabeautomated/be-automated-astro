---
// Header.astro - Navigationsleiste für alle Seiten
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-100 dark:border-gray-800 py-4 transition-colors duration-300">
  <div class="container mx-auto px-6 flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="/" class="flex items-center">
        <span class="text-xl font-bold text-[#c2783c] dark:text-[#d38545]">Be Automated</span>
      </a>
    </div>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center space-x-6">
      <a href="/" class="font-medium hover:text-[#c2783c] dark:text-gray-200 dark:hover:text-[#d38545] transition-colors">
        Startseite
      </a>
      <a href="/leistungen" class="font-medium hover:text-[#c2783c] dark:text-gray-200 dark:hover:text-[#d38545] transition-colors">
        Leistungen
      </a>
      <a href="/ueber-uns" class="font-medium hover:text-[#c2783c] dark:text-gray-200 dark:hover:text-[#d38545] transition-colors">
        Über uns
      </a>
      <a href="/blog" class="font-medium hover:text-[#c2783c] dark:text-gray-200 dark:hover:text-[#d38545] transition-colors">
        Blog
      </a>
      <a href="/kontakt" class="bg-[#c2783c] text-white hover:bg-[#b46c35] px-5 py-2 rounded-full transition-colors font-medium shadow-md hover:shadow-lg">
        Kontakt
      </a>
      
      <!-- Apple-Style Theme Toggle -->
      <div class="flex items-center ml-4 pl-4 border-l border-gray-200 dark:border-gray-700">
        <div class="flex items-center">
          <ThemeToggle />
        </div>
      </div>
    </nav>

    <!-- Mobile Menu mit Theme Toggle -->
    <div class="md:hidden flex items-center">
      <div class="mr-3 flex items-center">
        <ThemeToggle />
      </div>
      
      <!-- Mobile Menu Button -->
      <button class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header> 