<BaseLayout
  title="Kontakt - Starten Sie Ihre Automatisierungsreise | Be Automated"
  description="Erhalten Sie eine maßgeschneiderte Analyse Ihrer Prozesse und erfahren Sie, welches Optimierungspotenzial in Ihrem Unternehmen schlummert."
>
  <div class="relative">
    <!-- Subtiles Hintergrundmuster -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <svg class="absolute left-[50%] top-0 h-[48rem] w-[128rem] translate-x-[-50%] stroke-gray-200 dark:stroke-gray-700/60 [mask-image:radial-gradient(64rem_64rem_at_top,white,transparent)]" aria-hidden="true">
        <defs>
          <pattern id="e813992c-7d03-4cc4-a2bd-151a68b855a7" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
            <path d="M100 200V.5M.5 .5H200" fill="none"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" stroke-width="0" fill="url(#e813992c-7d03-4cc4-a2bd-151a68b855a7)"/>
      </svg>
    </div>

    <section class="py-16 relative z-10">
      <div class="container mx-auto px-4 max-w-2xl">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold mb-4 leading-tight text-gray-900 dark:text-white">Starten Sie Ihre Automatisierungsreise</h1>
          <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Erhalten Sie eine maßgeschneiderte Analyse Ihrer Prozesse und erfahren Sie, welches Optimierungspotenzial in Ihrem Unternehmen schlummert.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-800/90 backdrop-blur-sm p-8 sm:p-10 rounded-xl shadow-2xl border border-gray-200 dark:border-gray-700">
          <h2 class="text-2xl font-semibold mb-8 text-center text-gray-800 dark:text-gray-200">Senden Sie uns eine Nachricht</h2>
          
          <form method="POST" action="https://n8n.deinserver.at/webhook/kontakt" class="space-y-8">
            <!-- Name mit Floating Label -->
            <div class="relative">
              <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                class="peer block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-transparent rounded-lg text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent placeholder-transparent transition-colors"
                placeholder="Ihr Name"
              />
              <label 
                for="name" 
                class="absolute left-4 top-3 text-gray-500 dark:text-gray-400 transition-all duration-200 ease-in-out peer-placeholder-shown:top-3 peer-placeholder-shown:text-base peer-focus:top-[-0.75rem] peer-focus:text-xs peer-focus:text-orange-600 dark:peer-focus:text-orange-400 peer-[:not(:placeholder-shown)]:top-[-0.75rem] peer-[:not(:placeholder-shown)]:text-xs"
              >
                Ihr Name
              </label>
            </div>

            <!-- E-Mail mit Floating Label -->
            <div class="relative">
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="peer block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-transparent rounded-lg text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent placeholder-transparent transition-colors"
                placeholder="Ihre E-Mail-Adresse"
              />
              <label 
                for="email" 
                class="absolute left-4 top-3 text-gray-500 dark:text-gray-400 transition-all duration-200 ease-in-out peer-placeholder-shown:top-3 peer-placeholder-shown:text-base peer-focus:top-[-0.75rem] peer-focus:text-xs peer-focus:text-orange-600 dark:peer-focus:text-orange-400 peer-[:not(:placeholder-shown)]:top-[-0.75rem] peer-[:not(:placeholder-shown)]:text-xs"
              >
                Ihre E-Mail-Adresse
              </label>
            </div>

            <!-- Telefon mit Floating Label -->
            <div class="relative">
              <input 
                type="tel" 
                id="telefon" 
                name="telefon" 
                class="peer block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-transparent rounded-lg text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent placeholder-transparent transition-colors"
                placeholder="Ihre Telefonnummer (optional)"
              />
              <label 
                for="telefon" 
                class="absolute left-4 top-3 text-gray-500 dark:text-gray-400 transition-all duration-200 ease-in-out peer-placeholder-shown:top-3 peer-placeholder-shown:text-base peer-focus:top-[-0.75rem] peer-focus:text-xs peer-focus:text-orange-600 dark:peer-focus:text-orange-400 peer-[:not(:placeholder-shown)]:top-[-0.75rem] peer-[:not(:placeholder-shown)]:text-xs"
              >
                Ihre Telefonnummer (optional)
              </label>
            </div>

            <!-- Kategorie-Dropdown (Styling angepasst für Konsistenz) -->
